{
    "compilerOptions": {
        "target": "es5",
        "module": "es2020",
        "moduleResolution": "node",
        "skipLibCheck": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "strict": false,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": false,
        "strictPropertyInitialization": false,
        "strictNullChecks": false,
        "baseUrl": "./",
        "lib": [
            "es2020",
            "DOM"
        ],
        "paths": {
            "@/*": [
                "resources/ts/*"
            ]
        },
    },
    "files": [
        "./vue-shims.d.ts"
    ],
    "include": [
        "resources/ts/**/*.ts",
        "resources/ts/**/*.js",
        "resources/ts/**/*.vue",
    ],
    "exclude": [
        "node_modules"
    ]
}