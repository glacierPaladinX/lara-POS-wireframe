{
    "compilerOptions": {
        "target": "es5",
        "strict": false,
        "module": "es2015",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "strictNullChecks": false,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "resources/ts/*"
            ]
        },
    },
    "files": [
        "./vue-shims.d.ts"
    ],
    "include": [
        "resources/ts/**/*.ts",
        "resources/ts/**/*.js",
        "resources/ts/**/*.vue",
    ],
    "exclude": [
        "node_modules"
    ]
}